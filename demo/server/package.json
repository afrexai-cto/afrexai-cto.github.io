{
  "name": "afrexai-demo-server",
  "version": "2.0.0",
  "description": "AfrexAI production demo backend",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "seed-schedules": "node -e \"require('./scheduler').seedDefaults()\"",
    "run-task": "node -e \"const e=require('./agents/executor'); e.executeTask(process.argv[1]).then(r=>console.log(JSON.stringify(r,null,2))).catch(e=>{console.error(e.message);process.exit(1)})\"",
    "status": "node -e \"const db=require('./db'); db.init(require('path').resolve(__dirname,'..')); console.log(JSON.stringify(db.read().metrics,null,2))\""
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "optionalDependencies": {
    "nodemailer": "^6.9.0"
  }
}
